      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
     
      <!-- used for creating the form and send data to the database-->
      <hr>
           <form action="/create" method="POST">
            <div class="form-row " id="display">
              <div class="col-md-6 mb-3" >
                <label for="validationDefault01">Add a Habit</label>
                <input type="text" class="form-control" id="validationDefault01"
                 placeholder="Habit name"
                 name="description" required>
                <hr>
              </div>
              
            
               
              <div class="col-md-2 mb-3">
                <label for="validationDefault05">Time</label>
                <input type="time" class="form-control" id="validationDefault05" name="time" required>
               <hr>
              </div>
              <div class="col-md-2 mb-3">
                <button class="btn btn-primary" id="addTask" type="submit"><i class="fas fa-plus fa-2x icon" ></i> <span>Add Task</span></button>

              </div>
             
            </div>
            
            <div class="center">
                     
         </div>
      </form>
      <hr>

      <footer>
        <!-- used to delete multiple task and show multiple tasks-->
      <form action="/delete/multiple-delete" method="get">
          <div id="multiple-delete">
          <button  class="btn btn-danger"  style="height:70px; width:200"type="submit">Multiple Delete Button</button>
        </div>
        <div class="habit">
            <%for(let i of todo_List){%>
              <hr>
              <div class="display">
                    <div class="task-info">
                    
                      <div class="task-info-checked">
                        <h1><input type="checkbox" id="<%=i._id%>" name="checkbox" class="checkbox" value="<%=i._id%>" ></h1>                                                                    
                      </div>
                        <div class="description">
                          <label for="<%=i._id%>"><h2> <%=i.description%></h2></label></div>
                          
                      
             
                      </div>  
                      
                     
                    
                    <div class="task-info">
                          <div class="task-info-delete">
                            <a href="lastdays/?id=<%=i._id%>"><i class="fas fa-info-circle fa-3x"></i></a>
                            <a href="delete/?id=<%=i._id%>"><i class="far fa-trash-alt fa-2x" style="color:red"></i></a>
  
                        </div>
                    </div>
                    
  
              </div>
           
            <%}%>
        </form>
      </div>  
  </footer>
  
