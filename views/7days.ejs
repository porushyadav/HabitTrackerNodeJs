<link rel="stylesheet" href="/css/details.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<div class="back"><a href="/"><button type="button" class="btn btn-dark" id="back">Back</button></a></div>


<div class="container">
  

   
    <!-- ---- display details of habit ---- -->
    <div class="top">
        <div class="namee"> <%=habit.description%> </div>
        <div class="timee"><%=habit.time%> </div>
    </div>
    <div id="filter">
        <button type="button" id="all"  class="btn btn-info">All</button>
        <button type="button" id="Completed" class="btn btn-info">Completed</button>
        <button type="button" id="InCompleted" class="btn btn-info">UnCompleted</button>
        <button type="button" id="None" class="btn btn-info">None</button>

    </div>
    <hr>
    <!-- ---- display days track of habit ---- -->
    <div >
    <table >
        <tr>
            <th class="d">Date</th>
            <th class="d"> Current Status</th>
            <th class="d">Change Status</th>
        </tr>
     <!-- filling data from the habit tracker -->
        <% for(let i=0;i<15;i++){ %>
            <tr class=" filter-data" >
                <th class="date"><%=habit.days.date[i]%></th>
                <th class="current-status" data-status="<%=habit.days.status[i]%>"><%=habit.days.status[i]%></th>
                <th class="dropdown1">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle " 
                            type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            None
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                             <a class="dropdown-item " href="change/?id=<%=habit._id%>&status=Completed&date=<%=habit.days.date[i]%>" name="Completed" active>Completed</a>
                             <a class="dropdown-item " href="change/?id=<%=habit._id%>&status=InCompleted&date=<%=habit.days.date[i]%>" name="InCsompleted" >Incomplete</a>
                            <a class="dropdown-item" href="change/?id=<%=habit._id%>&status=None&date=<%=habit.days.date[i]%>" name="None" >None</a>
                        </div>
                    </div>
                </th>
            </tr>
         <%}%>
       
    
    </table>
</div>

</div>

